{
  "name": "trading-hedgestack",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm --filter backend dev\" \"pnpm --filter frontend dev\"",
    "build": "pnpm --filter backend build && pnpm --filter frontend build",
    "test": "pnpm --filter backend test && pnpm --filter frontend test",
    "test:unit": "pnpm --filter backend test:unit",
    "lint": "pnpm --recursive lint",
    "format": "prettier --write \"packages/**/*.{ts,tsx,json}\""
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3"
  }
}
